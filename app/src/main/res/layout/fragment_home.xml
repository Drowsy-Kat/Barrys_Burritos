<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aldrich"
        android:text="@string/barry_s_burritos"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/banner_image_of_burritos"
                android:src="@drawable/banner"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/think_burrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/think_barry"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView9" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/welcome_to_barry_s_burritos_where_every_bite_tells_a_story_of_flavor_and_freshness_at_barry_s_we_re_passionate_about_crafting_the_perfect_burrito_experience_for_our_customers_from_the_moment_you_step_into_our_cozy_corner_eatery_you_re_enveloped_in_the_enticing_aroma_of_sizzling_meats_savory_spices_and_fresh_ingredients"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView11" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/our_journey_begins_bright_and_early_each_morning_as_our_culinary_wizards_swing_into_action_preparing_a_tantalizing_array_of_fillings_and_toppings_from_succulent_grilled_chicken_to_mouthwatering_carne_asada_each_protein_is_marinated_to_perfection_ensuring_a_burst_of_flavor_in_every_bite_meanwhile_our_vibrant_selection_of_veggies_crisp_lettuce_juicy_tomatoes_creamy_avocado_and_more_adds_a_refreshing_crunch_and_a_burst_of_color_to_every_burrito"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/but_what_truly_sets_barry_s_burritos_apart_is_our_commitment_to_quality_and_innovation_behind_the_scenes_our_chefs_are_constantly_experimenting_with_new_flavors_and_techniques_to_keep_our_menu_fresh_and_exciting_whether_it_s_our_signature_chipotle_aioli_or_our_zesty_mango_salsa_each_condiment_is_carefully_crafted_to_complement_the_natural_flavors_of_our_ingredients_taking_your_taste_buds_on_a_journey_they_won_t_soon_forget"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView15" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/so_whether_you_re_a_burrito_aficionado_or_a_first_time_visitor_we_invite_you_to_join_us_on_a_culinary_adventure_at_barry_s_burritos_our_friendly_staff_is_here_to_guide_you_through_our_menu_and_help_you_craft_the_perfect_burrito_to_satisfy_your_cravings_and_with_our_cozy_atmosphere_and_welcoming_vibe_you_ll_feel_right_at_home_from_the_moment_you_walk_through_our_doors_we_can_t_wait_to_share_our_passion_for_burritos_with_you_come_visit_us_today_and_experience_the_magic_of_barry_s"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView17" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:text="@string/so_come_on_down_to_barry_s_burritos_today_and_experience_the_magic_for_yourself_one_bite_and_you_ll_understand_why_we_re_not_just_making_burritos_we_re_crafting_culinary_dreams_one_tortilla_at_a_time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView19" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>